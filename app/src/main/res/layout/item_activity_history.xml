<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_activity_history_main_cl"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"
    android:layout_marginBottom="32dp"
    android:layout_marginHorizontal="12dp">

    <ImageView
        android:id="@+id/item_activity_history_iv"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:background="@drawable/bg_blue_100_radius_90"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/item_activity_history_lock_iv"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_lock"
        app:layout_constraintStart_toStartOf="@id/item_activity_history_iv"
        app:layout_constraintEnd_toEndOf="@id/item_activity_history_iv"
        app:layout_constraintTop_toTopOf="@id/item_activity_history_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_activity_history_iv" />

    <TextView
        android:id="@+id/item_activity_history_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="가천관"
        android:textColor="@color/gray900"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/PretendardMedium14"
        app:layout_constraintTop_toBottomOf="@id/item_activity_history_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>