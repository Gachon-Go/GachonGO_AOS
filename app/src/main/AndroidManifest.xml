<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.gachongo.GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GachonGOAOS"
        tools:targetApi="31">
        <activity android:name="com.example.gachongo.presentation.main.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.gachongo.login.KakaoLoginActivity" android:exported="true" />
        <activity android:name="com.example.gachongo.login.EmailAuthActivity" android:exported="false" />
        <activity android:name="com.example.gachongo.login.NicknameActivity" android:exported="false" />
        <activity android:name="com.example.gachongo.login.WelcomeActivity" android:exported="false" />

        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data android:host="oauth" android:scheme="@string/KAKAO_OAUTH_KEY" />
            </intent-filter>
        </activity>
    </application>

</manifest>